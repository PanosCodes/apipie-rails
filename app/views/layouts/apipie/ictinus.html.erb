<!doctype html>
<html lang="en">
<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
  <link href="https://getbootstrap.com/docs/5.0/examples/sidebars/sidebars.css" rel="stylesheet">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Roboto&family=Source+Code+Pro:wght@200;400;700&display=swap" rel="stylesheet">
  <link type='text/css' rel='stylesheet' href='<%= Apipie.full_url("stylesheets/ictinus.css") %>'/>

  <style>
      @import url("https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css");
  </style>
  <script type='text/javascript' src="<%= Apipie.full_url('javascripts/bundled/jsonview.js') %>"></script>

  <title><%= t('apipie.api_documentation', :default => 'Api Documentation') %></title>
</head>
<body>

<%= render partial: "#{theme_path}/navbar" %>

<div class="container-fluid my-md-5">
  <div class="row">
    <div class="col-md-3">
      <%= render partial: "#{theme_path}/sidebar_left" %>
    </div>

    <div class="col-md-4">
      <div class="row">
        <div class="col">
          <%= render partial: "#{theme_path}/breadcrumbs" %>
        </div>
      </div>

      <%= yield %>
    </div>

    <div class="col-md-5">
      <% if defined?(@method) %>
        <%= render partial: "#{theme_path}/sidebar_right", locals: { examples: @method[:examples] } %>
      <% end %>
    </div>
  </div>

  <%= render 'disqus' if Apipie.configuration.use_disqus? %>
</div>

<footer><%= yield :apipie_footer %></footer>

